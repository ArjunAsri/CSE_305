library IEEE;
use  IEEE.STD_LOGIC_1164.all;
use  IEEE.STD_LOGIC_ARITH.all;
use  IEEE.STD_LOGIC_UNSIGNED.all;

ENTITY PUSH_BUTTONS IS
	PORT(	PB_1, PB_2: IN STD_LOGIC;
			PUSH_BUTTON_1, PUSH_BUTTON_2	: OUT	STD_LOGIC;
END PUSH_BUTTONS;

architecture Behavior of PUSH_BUTTONS is
SIGNAL TOGGLE_BUTTON_1   :STD_LOGIC := '0';
SIGNAL TOGGLE_BUTTON_2   :STD_LOGIC := '0';
begin
PROCESS(PB_1,PB_2) 
BEGIn

IF (RISING_EDGE(PB1) THEN
TOGGLE_BUTTON_1 = NOT TOGGLE_BUTTON_1;
ELSIF(RISING_EDGE(PB2) THEN
TOGGLE_BUTTON_2 = NOT TOGGLE_BUTTON_2;
END IF;

END PROCESS;
PUSH_BUTTON_1 <= TOGGLE_BUTTON_1;
PUSH_BUTTON_2 <= TOGGLE_BUTTON_2;
end Behavior;